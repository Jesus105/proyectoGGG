<div class="container">
  <div class="row">
    <div class="col md-6 ">
        <div class="card">
            <div class="card-header">
                <h1>Actualizar datos del cliente</h1>
            </div>
            
        <div class="card-body">
          <form action="/update-user/{{data.id}}" method="POST">
            <div class="row">
              <div class="col">
                <label for="name">Nombre:</label>
                <input
                  type="text"
                  name="name"
                  placeholder="{{data.name}}"
                  class="form-control mb-3"
                  value="{{data.name}}"
                  autofocus
                />
              </div>
              <div class="col">
                <label for="age">Edad:</label>
                <input
                  type="text"
                  name="age"
                  placeholder="{{data.age}}"
                  class="form-control mb-3"
                  value="{{data.age}}"
                />
              </div>
            </div>
            <div class="row">
              <div class="col">
                <label for="email">Correo:</label>
                <input
                  type="text"
                  name="email"
                  placeholder="{{data.email}}"
                  class="form-control mb-3"
                  value="{{data.email}}"
                />
              </div>
              <div class="col">
                <label for="phone">Telefono:</label>
                <input
                  type="text"
                  name="phone"
                  placeholder="{{data.phone}}"
                  class="form-control mb-3"
                  value="{{data.phone}}"
                />
              </div>
            </div>
            <div class="row">
              <div class="col">
                <label for="state">Estado:</label>
                <input
                  type="text"
                  name="state"
                  placeholder="{{data.state}}"
                  class="form-control mb-3"
                  value="{{data.state}}"
                />
              </div>
              <div class="col">
                <label for="street">Calle</label>
                <input
                  type="text"
                  name="street"
                  placeholder="{{data.street}}"
                  class="form-control mb-3"
                  value="{{data.street}}"
                />
              </div>
              <div class="col">
                <label for="s_number">Numero Calle</label>
                <input
                  type="text"
                  name="s_number"
                  placeholder="{{data.s_number}}"
                  class="form-control mb-3"
                  value="{{data.s_number}}"
                />
              </div>
            </div>
            {{#if data.id}}
              <button class="btn btn-primary btn-block">
                Actualizar
              </button>
              <a href="/users" class="btn btn-secondary">
                Cancelar
              </a>
            {{else}}
              <button class="btn btn-primary btn-block">
                Actuailzar
              </button>
            {{/if}}
          </form>
        </div>
            
        </div>
    </div>
