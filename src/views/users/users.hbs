<div class="container">
  <div class="row">
    <div class="col md-6 ">
    <div class="card">
        <div class="card-header">
            <h1>Información Clientes</h1>
        </div>
        <div class="card-body">
          {{#if users}}
            <ul class="list-group">
            {{#each users}}
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <ul>
                  <li>
                    Nombre: {{name}}
                  </li>
                  <li>
                    Edad: {{age}}
                  </li>
                  <li>
                    e-mail: {{email}}
                  </li>
                  <li>
                    Teléfono: {{phone}}
                  </li>
                  <li>
                    Estado: {{state}}
                  </li>
                  <li>
                    Calle: {{street}}
                  </li>
                  <li>
                    Número: {{s_number}}
                  </li>
                </ul>
                <a href="/get-user/{{@key}}" class="btn btn-primary">
                  Actualizar
                </a>
                <a href="/delete-user/{{@key}}" class="btn btn-danger">
                  Eliminar
                </a>
              </li>
            {{/each}}
            </ul>
          {{else}}
          <p>Aún no se registran clientes</p>
          {{/if}}
        </div>
    <div class="card-footer">
      <form action="/new-user" method="POST">
        <div class="row">
          <div class="col">
            <label for="name">Nombre:</label>
            <input
              type="text"
              name="name"
              placeholder="Nombre"
              class="form-control mb-3"
              value="{{user.name}}"
              autofocus
            />
          </div>
          <div class="col">
            <label for="age">Edad:</label>
            <input
              type="text"
              name="age"
              placeholder="Edad"
              class="form-control mb-3"
              value="{{user.age}}"
            />
          </div>
        </div>
        <div class="row">
          <div class="col">
            <label for="email">Correo:</label>
            <input
              type="text"
              name="email"
              placeholder="Correo"
              class="form-control mb-3"
              value="{{user.email}}"
            />
          </div>
          <div class="col">
            <label for="phone">Telefono:</label>
            <input
              type="text"
              name="phone"
              placeholder="Telefono"
              class="form-control mb-3"
              value="{{user.phone}}"
            />
          </div>
        </div>
        <div class="row">
          <div class="col">
            <label for="state">Estado:</label>
            <input
              type="text"
              name="state"
              placeholder="Estado"
              class="form-control mb-3"
              value="{{user.state}}"
            />
          </div>
          <div class="col">
            <label for="street">Calle</label>
            <input
              type="text"
              name="street"
              placeholder="Calle"
              class="form-control mb-3"
              value="{{user.street}}"
            />
          </div>
          <div class="col">
            <label for="s_number">Numero Calle</label>
            <input
              type="text"
              name="s_number"
              placeholder="Numero Calle"
              class="form-control mb-3"
              value="{{user.s_number}}"
            />
          </div>
        </div>
        {{#if user.id}}
          <button class="btn btn-primary btn-block">
            Update
          </button>
          <a href="/" class="btn btn-secondary">
            Cancel
          </a>
        {{else}}
          <button class="btn btn-primary btn-block">
            Agregar
          </button>
        {{/if}}
      </form>
    </div>
        
    </div>
    </div>  
  </div>
</div>