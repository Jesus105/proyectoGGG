<div class="container">
  <div class="row">
    <div class="col md-6 ">
        <div class="card">
            <div class="card-header">
                <h1>Registrar sucursal</h1>
            </div>
            <div class="card-body">
              {{#if stores}}
                <ul class="list-group">
                {{#each stores}}
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <ul>
                      <li>
                        Nombre: {{name}}
                      </li>
                      <li>
                        Calle: {{street}}
                      </li>
                      <li>
                        Colonia: {{neighborhood}}
                      </li>
                      <li>
                        cp: {{cp}}
                      </li>
                      <li>
                        Estado: {{province}}
                      </li>
                      <li>
                        Teléfono: {{phone}}
                      </li>
                    </ul>
                    <a href="/get-store/{{@key}}" class="btn btn-primary">
                      Actualizar
                    </a>
                    <a href="/delete-store/{{@key}}" class="btn btn-danger">
                      Eliminar
                    </a>
                  </li>
                {{/each}}
                </ul>
              {{else}}
              <p>Aún no se registran autos</p>
              {{/if}}
            </div>
        <div class="card-footer">
          <form action="/new-store" method="POST">
            <div class="row">
              <div class="col">
                <label for="name">Nombre:</label>
                <input
                  type="text"
                  name="name"
                  placeholder="Nombre"
                  class="form-control mb-3"
                  value="{{store.name}}"
                />
              </div>
              <div class="col">
                <label for="street">Calle:</label>
                <input
                  type="text"
                  name="street"
                  placeholder="Calle"
                  class="form-control mb-3"
                  value="{{store.street}}"
                />
              </div>
            </div>
            <div class="row">
              <div class="col">
                <label for="neighborhood">Colonia:</label>
                <input
                  type="text"
                  name="neighborhood"
                  placeholder="Colonia"
                  class="form-control mb-3"
                  value="{{store.neighborhood}}"
                />
              </div>
              <div class="col">
                <label for="cp">cp:</label>
                <input
                  type="text"
                  name="cp"
                  placeholder="cp"
                  class="form-control mb-3"
                  value="{{store.cp}}"
                />
              </div>
            </div>
            <div class="row">
              <div class="col">
                <label for="province">Estado:</label>
                <input
                  type="text"
                  name="province"
                  placeholder="Estado"
                  class="form-control mb-3"
                  value="{{store.province}}"
                />
              </div>
              <div class="col">
                <label for="phone">Teléfono:</label>
                <input
                  type="text"
                  name="phone"
                  placeholder="Teléfono"
                  class="form-control mb-3"
                  value="{{store.phone}}"
                />
              </div>
            </div>
            {{#if store.id}}
              <button class="btn btn-primary btn-block">
                Update
              </button>
              <a href="/" class="btn btn-secondary">
                Cancel
              </a>
            {{else}}
              <button class="btn btn-primary btn-block">
                Agregar
              </button>
            {{/if}}
          </form>
        </div>
        </div>
      </div>
    </div>
</div>